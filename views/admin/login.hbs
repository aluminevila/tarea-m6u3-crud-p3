<form action="/admin/login" method="post">
    <div class="mb-3">
        <label for="formGroupExampleInput" class="form-label">Usuario</label>
        <input type="text" class="form-control" id="formGroupExampleInput" name="usuario" placeholder="Example input placeholder">
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">Contraseña</label>
        <input type="text" class="form-control" id="formGroupExampleInput2" name="password" placeholder="Another input placeholder">
    </div>
    <button type="submit" class="btn btn-primary">Sign in</button>
    {{#if error}}
    <p>Usuario y/o contraseña incorrectos</p>
    {{/if}}
</form>
